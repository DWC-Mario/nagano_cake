<div class="container my-5 w-75">
  <h5 class="d-inline bg-light">会員情報編集</h5>
  <div class="my-4">
    <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <td class="my-2">名前</td>
          <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name"%></td>
          <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
        </tr>
        <tr>
          <td class="my-2">フリガナ</td>
          <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana"%></td>
          <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana"%></td>
        </tr>
        <tr>
          <td class="my-1"><%= f.label :post_code, "郵便番号" %></td>
          <td><%= f.text_field :post_code, autofocus: true, autocomplete: "post_code"%></td>
        </tr>
        <tr>
          <td class="my-1"><%= f.label :address, "住所" %></td>
          <td colspan="4"><%= f.text_field :address, autofocus: true, autocomplete: "address", class: "w-100" %></td>
        </tr>
        <tr>
          <td class="my-1"><%= f.label :phone_number, "電話番号" %></td>
          <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></td>
        </tr>
        <tr>
          <td class="my-1"><%= f.label :email, "メールアドレス"%></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td class="my-1"><%= f.label :is_active, "会員ステータス"%></td>
            <td>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "有効" %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "退会" %>
            </td>
        </tr>
        <tr>
          <td></td>
          <td class="pt-3" colspan="2"><%= f.submit "変更を保存", class: "btn btn-outline-success" %></td>
          <td></td>
        </tr>
      </table>
    <% end %>
  </div>
  
</div>
