<div class="container my-5 w-75">
  
  <h5 class="d-inline bg-light">会員一覧</h5>
  <div class="my-4">
      <table class="table">
        <tr>
          <th class="bg-light">会員ID</th>
          <th class="bg-light">氏名</th>
          <th class="bg-light">メールアドレス</th>
          <th class="bg-light">ステータス</th>
        </tr>
         <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to admin_customer_path(customer) do %>
                <span class="text-dark text-decoration-underline">
                  <%= customer.last_name %>
                  <%= customer.first_name %>
                </span>
              <% end %>
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <% if customer.is_active %>
                <span class="text-success font-weight-bold">有効</span>
              <% else %>
                <span class="text-muted font-weight-bold">退会</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
      <div class="d-flex justify-content-center">
        <%= paginate @customers %>
      </div>
      
  </div>
