<div class="container">
  <% if @customer.present? %>
    <h5 class="d-inline bg-light"><%= @customer.full_name %>さんの注文一覧</h5>
  <% else %>
    <h5 class="d-inline bg-light">注文履歴一覧</h5>
  <% end %>
  <div class="my-4">
      <table class="table table-hover">
        <tr>
          <th class="bg-light">購入日時</th>
          <th class="bg-light">購入者</th>
          <th class="bg-light">注文個数</th>
          <th class="bg-light">注文ステータス</th>
        </tr>
         <% @orders.each do |order| %>
          <tr class="table-link" data-href="/admin/orders/<%= order.id %>" >
            <td>
                <span class="text-dark text-decoration-underline">
                  <%= order.created_at.in_time_zone('Asia/Tokyo').strftime('%Y/%m/%d %H:%M:%S') %>
                </span>
            </td>
            <td>
              <%= order.customer.last_name %>
              <%= order.customer.first_name %>
            </td>
            <td>
              <% total_quantity = order.ordering_items.sum(:count) %>
              <%= total_quantity %>
            </td>
            <td>
              <%= t("enums.order.order_status.#{order.order_status}") %>
            </td>
          </tr>
        <% end %>
      </table>
      <div class="d-flex justify-content-center">
        <%= paginate @orders %>
      </div>
</div>
<script>
 $(document).on("turbolinks:load", function() {
  $(".table-link").on('click', function() {
      window.location = $(this).data("href");
  });
});
</script>
