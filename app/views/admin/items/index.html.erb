<h1>商品一覧</h1>
<div class="row">
 <li>
 <%= link_to new_admin_item_path,class:"btn btn-outline-secondary" do %>
 <i class="fa-solid fa-plus"></i>
<% end %>
</li>
</div>
<table class="table table-striped">
<tr>
  <th>商品id</th> <th>商品名</th> <th>税抜き価格</th> <th>ジャンル</th> <th>ステータス</th>
</tr>
 <% @items.each do |item| %>
 <tr>
  <td><%= item.id %></td> <td> <%=link_to item.item_name, admin_item_path(item.id) %></td> <td><%= item.price %></td> <td><%= item.genre_id %></td> 
  <td>
     <% if item.is_active == true %>
     販売中
     <% end %>
     <% if item.is_active == false %>
     販売停止中
     <% end %>
   </td>
 </tr>
 <% end %>
 </table>
 <div class="container">
  <div class="row">
   <div class="col-md-2 col-md-offset-5">
    <p class="text-center">
   <%= paginate @items %>
   </p>
   </div>
 </div>
 </div>
