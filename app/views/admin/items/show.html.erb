<div class="container">
  <h4>商品詳細</h4>
  <div class="row">
    <div class="col-lg-4">
      <%= image_tag @item.get_image(300,300) %>
    </div>
    <div class="col-lg-8">
      <table class="table">
        <tr>
          <th>商品名</th>
          <td><h4><%= @item.item_name %></h4></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><h5><%= @item.item_explanation %></h5></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><h5><%= @item.genre.genre_name %></h5></td>
        </tr>
        <tr>
          <th>
            <h5>税抜き価格<br>(税込み価格)</h5>
          </th>
          <td>
            <h5>¥<%= number_with_delimiter(@item.price) %> (¥<%= number_with_delimiter(@price_in_tax) %>)</h5>
          </td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active == true %>
            販売中
            <% end %>
            <% if @item.is_active == false %>
            販売停止中
            <% end %>
          </td>
        </tr>
      </table>
      <%= link_to "編集", edit_admin_item_path, class: "btn btn-outline-success" %>
    </div>
  </div>
</div>
