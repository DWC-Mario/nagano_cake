<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-white">
    <div class="container">
      <a class="navbar-brand" href="<%= root_path %>">ながのCAKE</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if customer_signed_in? %>
            <li class="nav-item">
              <%= link_to customer_path, class: 'btn btn-light' do %>
                マイページ
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to items_path, class: 'btn btn-light' do %>
                商品一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to cart_items_path, class: 'btn btn-light' do %>
                カート
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_customer_session_path, method: :delete, class: 'btn btn-light' do %>
                ログアウト
              <% end %>
            </li>
          <% elsif admin_signed_in? %>
            <li class="nav-item">
              <%= link_to admin_items_path, class: 'btn btn-light' do %>
                商品一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_customers_path, class: 'btn btn-light' do %>
                会員一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_root_path, class: 'btn btn-light' do %>
                注文履歴一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_genres_path, class: 'btn btn-light' do %>
                ジャンル一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_admin_session_path, method: :delete, class: 'btn btn-light' do %>
                ログアウト
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to about_path, class: 'btn btn-light' do %>
                About
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to items_path, class: 'btn btn-light' do %>
                商品一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_customer_registration_path, class: 'btn btn-light' do %>
                新規会員登録
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_customer_session_path, class: 'btn btn-light' do %>
                ログイン
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container text-center">
    <% if customer_signed_in? %>
      <p class="my-0">ようこそ、<%= current_customer.full_name %>さん！</p>
    <% elsif admin_signed_in? %>
      <p class="my-0">ようこそ、管理者さん！</p>
    <% end %>
  </div>
</header>