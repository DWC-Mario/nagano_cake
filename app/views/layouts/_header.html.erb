      <div class="col text-center">
        <% if customer_signed_in? %>
          <p class="my-0">ようこそ、<%= current_customer.last_name %>さん！</p>
        <% elsif admin_signed_in? %>
          <p class="my-0">ようこそ、管理者さん！</p>
        <% end %>
      </div>
      <div class="row">
      <div class="col-auto ml-auto">
         <div class="input-group">
          <%= form_with(url: items_path, class: "form-inline my-2 my-lg-0", method: :get) do |f|%>
            <%= f.text_field :query, value: params[:query], class: "form-control", placeholder: "検索", aria_label: "検索" %>
            <div class="input-group-append">
              <%= f.submit "検索", class: "btn btn-light" %>
