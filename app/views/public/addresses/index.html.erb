 <% if @address.errors.any? %>
  <%= @address.errors.count %>件のエラーが発生しました
  <ul>
    <% @address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<p id="notice"></p> 


<div class = "row">
  <div class = " w-10 mx-auto mt-5" >
    <div class = "center" >
    <h3>配送先登録/一覧</h3>
      <table>
        <%= form_with model: Address.new do |f| %>
          <tr>
            <th><%= f.label :郵便番号（ハイフンなし） %></th>
            <th><%= f.text_field :post_code%></th>
            <th></th>
            <th></th>
          </tr>
          <tr>
            <td><%= f.label :住所 %></td>
            <td colspan = "2"><%= f.text_field :address ,:size=> "60"%></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :宛名 %></td>
            <td><%= f.text_field :address_name %></td>
            <td></td>
            <td> <%= f.submit "新規登録",class: 'btn btn-success' %></td>
           </tr>
        <% end %>
      </table>
      <div class = "mt-5" ></div>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.post_code %></td>
              <td><%= address.address %> </td>
              <td><%= address.address_name %></td>
              <td>
                <%= link_to '編集する', edit_address_path(address), class: "btn btn-sm btn-success" %>
                <%= link_to '削除する', address_path(address), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
                </td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>