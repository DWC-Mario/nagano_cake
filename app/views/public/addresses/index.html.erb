<div class = "row">
  <div class = " w-10 mx-auto mt-3" >
      <%= render 'errors', address: @address %>

    <h3 class="d-inline highlight">配送先登録/一覧</h3>
      <%= form_with model: @address do |f| %>
        <table class="mt-3">
          <tr>
            <td><%= f.label :post_code,"郵便番号（ハイフンなし）" %></td>
            <td><%= f.text_field :post_code, placeholder: "0000000", class: "custom-input" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :address ,"住所 "%></td>
            <td colspan = "2"><%= f.text_field  :address ,placeholder: "東京都渋谷区代々木神園町0−0", :size=> "60", class: "custom-input" %></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :address_name,"宛名" %></td>
            <td><%= f.text_field :address_name, placeholder: "令和道子", :size=> "30", class: "custom-input" %></td>
            <td></td>
            <td> <%= f.submit "新規登録",class: "btn custom-button" %></td>
           </tr>
        </table>
      <% end %>
      <div class = "mt-5" ></div>
      <table class="table table-bordered">
        <thead class="custom-header">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td>〒<%= address.post_code.insert(3, "-") %></td>
              <td><%= address.address %> </td>
              <td><%= address.address_name %></td>
              <td>
                <%= link_to '編集する', edit_address_path(address), class: "btn custom-button" %>
                <%= link_to '削除する', address_path(address), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn delete-button"%>
                </td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>