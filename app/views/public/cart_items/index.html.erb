<div class="container">
  <div class="row d-flex justify-content-between my-3 px-3">
    <h4>ショッピングカート</h4>
    <span>
      <%= link_to 'カートを空にする', destroy_all_path, method: :delete, class:"btn btn-sm btn-danger" %>
    </span>
  </div>
  <table class="table table-bordered">
    <thead class="table-secondary">
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= link_to item_path(cart_item) do %>
              <%= image_tag  cart_item.item.get_image(50,50) %>
            <% end %>
            <%= cart_item.item.item_name %>
          </td>
          <td>
            <%= cart_item.item.tax_included_price %>
          </td>
          <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch, local: true do |f| %>
              <%= f.select :count, * [1..10] %>
              <%= f.submit '変更', class:"btn btn-sm btn-success" %>
            <% end %>
          </td>
          <td>
            <%= cart_item.subtotal %>
          </td>
          <td>
            <%= link_to '削除する', cart_item_path(cart_item), method: :delete, class:"btn btn-sm btn-danger" %>
          </td>
        </tr>
        <% @sum += cart_item.subtotal %>
      <% end %>
    </tbody>
  </table>
  <div class="row d-flex justify-content-between px-3">
    <span class="px-5">
      <%= link_to '買い物を続ける', root_path, class:"btn btn-sm btn-primary" %>
    </span>
    <span>
      <table class="table table-bordered">
        <tr>
          <td class="table-secondary">合計金額</td>
          <td><%= @sum %></td>
        </tr>
      </table>
    </span>
  </div>
  <div class="row">
    <span class="px-3 mx-auto">
      <%= link_to '情報入力に進む', new_order_path, class:"btn btn-sm btn-success" %>
    </span>
  </div>
</div>

