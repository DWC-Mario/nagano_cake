<h2>ショッピングカート</h2>
<%= link_to 'カートを空にする', destroy_all_path, method: :delete %>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.eath do |cart_item| %>
      <tr>
        <td>
          <%= image_tag %>
          <%= cart_item.item.item_name %>
        </td>
        <td>
          <%= (cart_item.item.price*1.1).to_i %>
        </td>
        <td>
          <% form_with model: cart_item, url:cart_item_params(cart_item), method: :patch, local: true do |f| %>
            <%= f.number_finld :count, min: 1, max: 100 %>
            <%= f.submit '変更' %>
          <% end %>
        </td>
        <td>
          <%　subtotal = ((cart_item.item.price*cart_item.count)*1.1).to_i %>
          <%= subtotal %>
        </td>
        <td>
          <%= link_to '削除する', cart_item_path(cart_item), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>


