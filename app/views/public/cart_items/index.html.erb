<div class="container">
  <div class="row">
    <h4>ショッピングカート</h4>
    <div class="text-right">
      <span><%= link_to 'カートを空にする', destroy_all_path, method: :delete, class:"btn btn-sm btn-danger" %></span>
    </div>
  </div>
  <table class="table table-bordered">
    <thead class="table-secondary">
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag  'no_image', size: "50x50" %>
            <%= cart_item.item.item_name %>
          </td>
          <td>
            <%= cart_item.item.tax_inculuded_price %>
          </td>
          <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch, local: true do |f| %>
              <%= f.select :count, * [1..10] %>
              <%= f.submit '変更', class:"btn btn-sm btn-success" %>
            <% end %>
          </td>
          <td>
            <%= cart_item.subtotal %>
          </td>
          <td>
            <%= link_to '削除する', cart_item_path(cart_item), method: :delete, class:"btn btn-sm btn-danger" %>
          </td>
          <% @total_price += cart_item.subtotal %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <%= link_to '買い物を続ける', root_path, class:"btn btn-sm btn-primary" %>
    <%= @total_price %>
  </div>
  <div>
    <%= link_to '情報入力に進む', new_order_path, class:"btn btn-sm btn-success" %>
  </div>
</div>

