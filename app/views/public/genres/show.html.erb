<table>
<tr>
  <th><h1><%= @genre.genre_name %>一覧</h1></th> <td><h4>(全<%= @genre.items.count%>件)</h4></td>
</tr>
</table>

<div class="container">
  <div class="row">
  <% @genre.items.each do |item| %>
  <div class="col-md-3">
  <div class="item-box">

     <%= link_to item_path(item.id) do %>
        <%= image_tag item.get_image(200,200)%>
        <% end %><br>
     <%=link_to @item.item_name, item_path(item.id) %><br>
     ¥<%= item.price %>
  </div>
  </div>
  <% end %>

  <%= paginate @items %>