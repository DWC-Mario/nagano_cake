<div class="container">
  <table>
    <tr>
      <th><h1>商品一覧</h1></th>
      <td><h4>(全<%= @items.total_count %>件)</h4></td>
    </tr>
  </table>
  <div class="row">
    <div class="col-md-2">
      <%= render "public/genres/search", genres: @genres %>
    </div>
    <div class="col-md-10">
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-3 fadein txt0<%= @i %>">
            <%= link_to item_path(item.id), class: "text-decoration-none" do %>
              <div class="card text-dark tr-color h-100 bg-transparent border-0">
                <%= image_tag item.get_image(238,238), class: "card-img-top rounded-circle" %>
                <div class="card-body">
                  <h6 class="card-title text-truncate"><%= item.item_name %></h6>
                  <p class="card-text text-truncate">
                    ¥<%= number_with_delimiter(item.price) %>
                    (¥<%= number_with_delimiter(item.tax_included_price) %>)
                  </p>
                </div>
              </div>
              <% @i += 1 %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center custom-pagination">
    <%= paginate @items, class: "custom-pagination" %>
  </div>
</div>
