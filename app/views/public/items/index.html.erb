<table>
<tr>
  <th><h1>商品一覧</h1></th> <td><h4>(全<%= @items.count%>件)</h4></td>
</tr>
</table>

<div class="container">
  <div class="row">
  <% @items.each do |item| %>
  <div class="col-md-3">
  <div class="item-box">

      <%= image_tag item.get_image(200,200) %><br>
     <%=link_to item.item_name, item_path(item.id) %><br>
     ¥<%= item.price %>



  </div>
  </div>
  <% end %>
 
  <%= paginate @items %>
  
  </div>
</div>

