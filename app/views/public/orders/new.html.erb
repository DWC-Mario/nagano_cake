<div class="container">
  <div class="row my-3 px-3">
    <div class="mx-auto">
      <h4>注文情報入力</h4>
      <div>
        <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
          <h5>支払方法</h5>
          <div class="ml-5">
            <%= f.radio_button :how_to_pay, Order.how_to_pays.key(0) %>
            <%= f.label :how_to_pay_transfer, Order.how_to_pays_i18n[:transfer]%>
          </div>
          <div class="ml-5">
            <%= f.radio_button :how_to_pay, Order.how_to_pays.key(1) %>
            <%= f.label :how_to_pay_credit_card, Order.how_to_pays_i18n[:credit_card] %>
          </div>
          <h5>お届け先</h5>
          <div class="ml-5 mb-2">
            <%= f.radio_button :select_address, "0", checked: true %>
            <%= f.label :select_address_0, "ご自身の住所" %><br>
            <div class="ml-4">
              <%= current_customer.full_address %><br>
              <%= current_customer.full_name %>
            </div>
          </div>
          <div class="ml-5 mb-2">
            <%= f.radio_button :select_address, "1" %>
            <%= f.label :select_address_1, "登録済み住所から選択" %><br>
            <div class="ml-4">
              <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display), {}, style: "width: 600px;" %>
            </div>
          </div>
          <div class="ml-5 mb-2">
            <%= f.radio_button :select_address, "2" %>
            <%= f.label :select_address_2, "新しいお届け先" %><br>
            <table class="ml-4">
              <tr>
                <td><%= f.label :post_code,"郵便番号（ハイフンなし）" %></td>
                <td><%= f.text_field :post_code, placeholder: "0000000" %></td>
                <td></td>
                <td></td>
              </tr>
              <tr>
                <td><%= f.label :address ,"住所 "%></td>
                <td colspan = "2"><%= f.text_field :address ,placeholder: "東京都渋谷区代々木神園町0−0", :size=> "50" %></td>
                <td></td>
              </tr>
              <tr>
                <td><%= f.label :address_name,"宛名" %></td>
                <td><%= f.text_field :address_name, placeholder: "令和道子", :size=> "30" %></td>
                <td></td>
               </tr>
            </table>
          </div>
          <div class="row">
            <span class="mt-3 px-3 mx-auto">
              <%= f.submit "確認画面へ進む", class:"btn btn-outline-secondary" %>
            </span>
          </div>
        <% end %>
       </div>
    </div>
  </div>
</div>