<div class="container my-5">
  
  <% if flash[:error] %>
  <div class="alert danger">
    <%= flash[:error]%>

  </div>
  <% end %>
  
  <h5 class="d-inline bg-light">新規会員登録</h5>
  <div class="my-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table>
        <tr>
          <td class="py-2">名前</td>
          <td><%= f.label :last_name, "(姓)"%></td>
          <td><%= f.text_field :last_name, placeholder: "令和", autofocus: true, autocomplete: "last_name"%></td>
          <td><%= f.label :first_name, "(名)"%></td>
          <td><%= f.text_field :first_name, placeholder: "道子", autofocus: true, autocomplete: "first_name" %></td>
        </tr>
        <tr>
          <td class="py-2">フリガナ</td>
          <td><%= f.label :last_name_kana, "(セイ)"%></td>
          <td><%= f.text_field :last_name_kana, placeholder: "レイワ", autofocus: true, autocomplete: "last_name_kana"%></td>
          <td><%= f.label :first_name_kana, "(メイ)"%></td>
          <td><%= f.text_field :first_name_kana, placeholder: "ミチコ", autofocus: true, autocomplete: "first_name_kana"%></td>
        </tr>レイワ
        <tr>
          <td class="py-1"><%= f.label :email, "メールアドレス"%></td>
          <td></td>
          <td><%= f.email_field :email, placeholder: "example@example.com", autofocus: true, autocomplete: "email" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td class="py-1"><%= f.label :post_code, "郵便番号(ハイフンなし)" %></td>
          <td></td>
          <td><%= f.text_field :post_code, placeholder: "0000000", autofocus: true, autocomplete: "post_code"%></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td class="py-1"><%= f.label :address, "住所" %></td>
          <td></td>
          <td colspan="3"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0−0", autofocus: true, autocomplete: "address", class: "w-100" %></td>
        </tr>
        <tr>
          <td class="py-1"><%= f.label :phone_number, "電話番号(ハイフンなし)" %></td>
          <td></td>
          <td><%= f.text_field :phone_number, placeholder: "00000000000", autofocus: true, autocomplete: "phone_number" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td class="py-1"><%= f.label :password, "パスワード(6文字以上)" %></td>
          <td></td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td class="py-1"><%= f.label :password_confirmation, "パスワード(確認用)"%></td>
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password"%></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td class="py-1"><%= f.submit "新規登録", class: "btn btn-secondary btn-block" %></td>
          <td></td>
          <td></td>
        </tr>
      </table>
    <% end %>
  </div>
  
    
    <h5 class="d-inline bg-light">既に登録済みの方</h5>


  <p><%= render "public/shared/links" %>からログインしてください</p>
</div>
