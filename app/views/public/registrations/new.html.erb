<div class="container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="form-group">
      <%= f.label :name, "名前" %>
      <%= f.label :last_name, "(姓)" %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      <%= f.label :first_name, "(名)" %><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      div.col
      <%= f.label :kana, "フリガナ" %>
      <%= f.label :last_name_kana, "(セイ)" %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      <%= f.label :first_name_kana, "(メイ)" %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>
  </div>
  <% end %>
</div>
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
      <table>
      <tr>
        <td>
          <%= f.label :name, "名前" %>
        </td>
        <td>
          <%= f.label :last_name, "(姓)" %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </td>
        <td>
          <%= f.label :first_name, "(名)" %><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :kana, "フリガナ" %>
        </td>
        <td>
          <%= f.label :last_name_kana, "(セイ)" %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
        </td>
        <td>
          <%= f.label :first_name_kana, "(メイ)" %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :email, "メールアドレス" %>
        </td>
        <td>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
        </td>
        <td>
          <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :address, "住所" %>
        </td>
        <td>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
        </td>
        <td>
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :password, "パスワード(6文字以上)" %>
        </td>
        <td>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :password_confirmation, "パスワード(確認用)" %>
        </td>
        <td>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.submit "新規登録" %>
        </td>
      </tr>
    </table>
<% end %>

<%= render "public/shared/links" %>
